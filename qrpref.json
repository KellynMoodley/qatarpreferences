{
  "openapi": "3.0.3",
  "info": {
      "title": "Events API for Watson Assistant",
      "version": "1.0.1"
  },
  "tags": [],
  "servers": [
      {
          "description": "Code Engine deployment",
          "url": "https://{appname}.{projectid}.{region}.codeengine.appdomain.cloud",
          "variables": {
              "appname": {
                  "default": "myapp",
                  "description": "application name"
              },
              "projectid": {
                  "default": "projectid",
                  "description": "the Code Engine project ID"
              },
              "region": {
                  "default": "us-south",
                  "description": "the deployment region, e.g., us-south"
              }
          }
      },
      {
          "description": "local test",
          "url": "http://127.0.0.1:{port}",
          "variables": {
              "port": {
                  "default": "5000",
                  "description": "local port to use"
              }
          }
      }
  ],
  "paths": {
      "/": {
          "get": {
              "parameters": [],
              "responses": {
                  "200": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "object",
                                  "properties": {
                                      "message": {
                                          "type": "string"
                                      }
                                  }
                              }
                          }
                      },
                      "description": "Successful response"
                  }
              },
              "summary": "Greeting",
              "description": "health check"
          }
      },
      "/Preferences/create": {
          "post": {
              "parameters": [],
              "responses": {
                  "201": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/CertOut"
                              }
                          }
                      },
                      "description": "Successful response"
                  },
                  "400": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/ValidationError"
                              }
                          }
                      },
                      "description": "Validation error"
                  },
                  "401": {
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/HTTPError"
                              }
                          }
                      },
                      "description": "Authentication error"
                  }
              },
              "summary": "Insert a new record",
              "description": "Insert a new record with the given attributes.",
              "requestBody": {
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/CertIn"
                          }
                      }
                  }
              },
              "security": [
                  {
                      "ApiKeyAuth": []
                  }
              ]
          }
      },
      "/preferences/preferences/{preferences}": {
          "get": {
              "summary": "Get certifications by name",
              "description": "Retrieve all preference records for a specific category",
              "parameters": [
                  {
                      "in": "path",
                      "name": "preferences",
                      "schema": {
                          "type": "string"
                      },
                      "required": true,
                      "description": "The preference category to filter by"
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Successful response",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "array",
                                  "items": {
                                      "$ref": "#/components/schemas/CertOut"
                                  }
                              }
                          }
                      }
                  },
                  "400": {
                      "description": "Validation error",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/ValidationError"
                              }
                          }
                      }
                  },
                  "401": {
                      "description": "Authentication error",
                      "content": {
                          "application/json": {
                              "schema": {
                                  "$ref": "#/components/schemas/HTTPError"
                              }
                          }
                      }
                  }
              },
              "security": [
                  {
                      "ApiKeyAuth": []
                  }
              ]
          }
      }
  },
  "components": {
      "schemas": {
          "ValidationError": {
              "properties": {
                  "detail": {
                      "type": "object",
                      "properties": {
                          "<location>": {
                              "type": "object",
                              "properties": {
                                  "<field_name>": {
                                      "type": "array",
                                      "items": {
                                          "type": "string"
                                      }
                                  }
                              }
                          }
                      }
                  },
                  "message": {
                      "type": "string"
                  }
              },
              "type": "object"
          },
          "HTTPError": {
              "properties": {
                  "detail": {
                      "type": "object"
                  },
                  "message": {
                      "type": "string"
                  }
              },
              "type": "object"
          },
          "CertOut": {
              "type": "object",
              "properties": {
                  "title": {
                      "type": "string"
                  },
                  "link": {
                      "type": "string"
                  },
                  "category": {
                      "type": "string"
                  }
              }
          },
          "CertIn": {
              "type": "object",
              "properties": {
                  "title": {
                      "type": "string",
                      "minLength": 1
                  },
                  "link": {
                      "type": "string",
                      "minLength": 1
                  },
                  "category": {
                      "type": "string",
                      "minLength": 1
                  }
              },
              "required": [
                  "title",
                  "link",
                  "category"
              ]
          }
      },
      "securitySchemes": {
          "ApiKeyAuth": {
              "type": "apiKey",
              "name": "API_TOKEN",
              "in": "header"
          }
      }
  }
}
